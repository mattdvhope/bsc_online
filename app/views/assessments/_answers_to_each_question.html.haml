- choices.each do |choice|

  - case choice.selected
  - when true
    %h3= link_to choice.answer.answer_content, choice_path(choice), :method => :patch, :class => ['answer', 'clicked_on'], remote: true
  - when false
    %h3= link_to choice.answer.answer_content, choice_path(choice), :method => :patch, :class => ['answer'], remote: true
