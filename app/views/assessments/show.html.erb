<section class="site_title">
  <hr/>
    <h1>
      <%= "Here is your #{@assessment.type_of}  for the \"#{@assessment.course.name}\" course in the \"#{@assessment.course.curriculum.name}\" curriculum." %>
    </h1>
  <hr/>
  <% @assessment.questions.each do |question|  %>
    <div>
      <h2><%= question.question_content %></h2>
      <% question.answers.each do |answer|  %>
        <h3 class="answer" ><%= link_to answer.answer_content, root_path %></h3>
      <% end %>
    </div>
  <% end %>
  
</section>