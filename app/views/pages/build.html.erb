<section class="bsc-container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        <%= "Hi #{current_user.first_name}. You can build and edit your curricula, courses, parts, lessons and assessments (Exams, Tests & Quizzes) here.  Click on the links below to add or to edit." %>
      </h1>
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <a class="accordion-toggle" data-parent="#accordion" data-toggle="collapse" href="#collapseCurriculum">
              <h3>
                <%= "Curricula" %>
              </h3>
              <div class="collapse" id="collapseCurriculum">
                <div class="panel-body">
                  <% @curriculums.each do |curriculum| %>
                    <h3>
                      <%= link_to "Edit \"#{curriculum.name}\" Curriculum", edit_admin_curriculum_path(curriculum) %>
                    </h3>
                  <% end %>
                  <hr/>
                  <%= link_to "Build a new Curriculum", new_admin_curriculum_path, :class => 'btn btn-primary' %>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <a class="accordion-toggle" data-parent="#accordion" data-toggle="collapse" href="#collapseCourse">
              <h3>
                <%= "Courses (which are within a Curriculum)" %>
              </h3>
              <div class="collapse" id="collapseCourse">
                <div class="panel-body">
                  <% Course.all.each do |course| %>
                    <%= render 'pages/item_assessment_links', :item => course %>
                  <% end %>
                  <hr/>
                  <%= link_to "Build a new Course (within an existing Curriculum)", new_admin_course_path, :class => 'btn btn-primary' %>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <a class="accordion-toggle" data-parent="#accordion" data-toggle="collapse" href="#collapsePart">
              <h3>
                <%= "Parts (which are within a Course)" %>
              </h3>
              <div class="collapse" id="collapsePart">
                <div class="panel-body">
                  <% Part.all.each do |part| %>
                    <%= render 'pages/item_assessment_links', :item => part %>
                  <% end %>
                  <hr/>
                  <%= link_to "Build a new Part (within an existing Course)", new_admin_part_path, :class => 'btn btn-primary' %>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <a class="accordion-toggle" data-parent="#accordion" data-toggle="collapse" href="#collapseLesson">
              <h3>
                <%= "Lessons (which are within a Part)" %>
              </h3>
              <div class="collapse" id="collapseLesson">
                <div class="panel-body">
                  <% Lesson.all.each do |lesson| %>
                    <%= render 'pages/item_assessment_links', :item => lesson %>
                  <% end %>
                  <hr/>
                  <%= link_to "Build a new Lesson (within an existing Part)", new_admin_lesson_path, :class => 'btn btn-primary' %>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
