%a.accordion-toggle{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse" + "#{item.name.gsub(/\s+/, "")}"}
  %h3="Edit \"#{item.name}\""
  %div{:id => "collapse" + "#{item.name.gsub(/\s+/, "")}", :class => "panel-collapse", :class => "collapse"}
    .panel-body
      %h3=link_to "Edit \"#{item.name}.\"", '#'
      -if item.show_assessment
        -case item.class.name
        -when "Course"
          %h3=link_to "Edit the #{item.show_assessment} for \"#{item.name}.\"", edit_curriculum_course_admin_assessment_path(item.curriculum, item, item.provide_assessment_object)
        -when "Part"
          %h3=link_to "Edit the #{item.show_assessment} for \"#{item.name}.\"", edit_curriculum_course_admin_assessment_path(item.course.curriculum, item.course, item.provide_assessment_object)
        -when "Lesson"
          %h3=link_to "Edit the #{item.show_assessment} for \"#{item.name}.\"", edit_curriculum_course_admin_assessment_path(item.part.course.curriculum, item.part.course, item.provide_assessment_object)
      -else
        -case item.class.name
        -when "Course"
          %h3=link_to "Build an Exam for \"#{item.name}\"", new_curriculum_course_admin_assessment_path(item.curriculum, item)
        -when "Part"
          %h3=link_to "Build a Test for \"#{item.name}\"", new_curriculum_course_admin_assessment_path(item.course.curriculum, item.course)
        -when "Lesson"
          %h3=link_to "Build a Quiz for \"#{item.name}\"", new_curriculum_course_admin_assessment_path(item.part.course.curriculum, item.part.course)
