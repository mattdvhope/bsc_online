!!!
%html
  %head
    %title BSC Online
    %meta/
    %meta/
    = csrf_meta_tag
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    %script{:src => "http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"}
  %body
    #main-container.container
      .row
    = render 'layouts/nav'
    = render 'layouts/carousel' if controller_name == "pages" && !current_user

    / Page Content
    .container
      = render 'shared/messages'
      = yield
      = render 'layouts/footer'
