<div class="modal-dialog">

  <!-- Modal content-->
  <div class="modal-content application-modal-content">
    <div class="modal-header">
      <button type="button" class="close close-modal" data-dismiss="modal">&times;</button>
      <h3 class="modal-title app-title-1">{{application_title_1}}</h3>
      <h3 class="modal-title app-title-2">{{application_title_2}}</h3>
    </div>
    <div class="modal-body">
      <form novalidate="novalidate" class="simple_form application_form" id="new_user" enctype="multipart/form-data" action="/users" accept-charset="UTF-8" method="post">
      <input name="utf8" type="hidden" value="✓">
      <input type="hidden" name="authenticity_token" value={{token}}>
      <input type="hidden" name="guest" value="true">
        {{#if thai_language}}
          {{> application_form/thai/_intro_bullets }}
        {{^}}
          {{> application_form/english/_intro_bullets }}
        {{/if}}
        <hr>

        <span class="removable-appl-fields">
          <label class="field-label">Nickname (in English)</label>
          <input type="text" class="form-control nickname" placeholder="ชื่อเล่น (ภาษาอังกฤษ)" name="nickname">
          <hr>
          <label class="field-label">First Name (in English)</label>
          <input type="text" class="form-control first-name" placeholder="ชื่อจริง (ภาษาอังกฤษ)" name="first_name">
          <hr>
          <label class="field-label">Last Name (in English)</label>
          <input type="text" class="form-control last-name" placeholder="นามสกุล (ภาษาอังกฤษ)" name="last_name">
          <hr>
          <label class="field-label">Gender</label>
          <div>
            <select name="gender" class="gender-select">
              <option value="ผู้ชาย">ผู้ชาย</option>
              <option value="ผู้หญิง">ผู้หญิง</option>
            </select>
          </div>
          <hr>
        </span>

        <label class="field-label">Phone Number <b>(จำเป็น/required)</b></label>
            <input type="text" class="form-control phone-number" placeholder="เบอร์โทรศัพท์" name="phone_number">
        <hr>

        <label class="field-label email-label">Email Address (ไม่จำเป็น/optional)<h4>
        </h4></label>
        <input type="text" class="form-control email" placeholder="อีเมล" name="email">
        <hr>

        <span class="part_1_class_time_selectors">
          {{#if thai_language}}
            {{> application_form/thai/_part_1_class_time_selectors }}
          {{^}}
            {{> application_form/english/_part_1_class_time_selectors }}
          {{/if}}
        </span>

        <span class="part_2_class_time_selectors">
          {{#if thai_language}}
            {{> application_form/thai/_part_2_class_time_selectors }}
          {{^}}
            {{> application_form/english/_part_2_class_time_selectors }}
          {{/if}}
        </span>

        <hr>

        <span id="off-site-fields"></span>

        <h3><u>{{bank_transfer_info}}</u></h3>
        <h4>{{bank_transfer_extra_info}}</h4>
        <h4>{{bank_name}}</h4>
        <h4>{{bank_person}}</h4>
        <h4>{{bank_number}}</h4>
        <hr>

        <div class="control-group">
          {{#if thai_language}}
            {{> application_form/thai/_email_explanation }}
          {{^}}
            {{> application_form/english/_email_explanation }}
          {{/if}}
          <br>
          <br>
          <button class="guest-add btn" {{!-- data-toggle="modal" href="#" data-target="#welcomepopupmodal" --}}>Submit</button>
        </div>

        <hr>
        {{#if thai_language}}
          {{> application_form/thai/_after_submit }}
        {{^}}
          {{> application_form/english/_after_submit }}
        {{/if}}
      </form>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default close-modal" data-dismiss="modal">Close</button>
    </div>
  </div> <!-- Modal content-->
</div> <!-- Modal dialog -->


