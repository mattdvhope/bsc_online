<form novalidate="novalidate" class="simple_form new_user" id="new_user" action="/users" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value={{token}}>
  <header>
    <h1>Join an exciting team of City English Project (CEP) teachers!</h1>
    <h4>
      After you submit this form, we will then send you our Teacher Application Form.
    </h4>
  </header>

  <h3>
    <label for="user_first_name">First Name</label>
  </h3>
  <h3 class="black_field">
    <input placeholder="ชื่อเล่น" type="email" name="user[first_name]" id="user_first_name">
  </h3>

  <h3>
    <label for="user_last_name">Last Name</label>
  </h3>
  <h3 class="black field">
    <input placeholder="นามสกุล" type="email" name="user[last_name]" id="user_last_name">
  </h3>

  <h3>
    <label for="user_email">Email Address</label>
  </h3>
  <h3 class="black field">
    <input placeholder="อีเมล" type="email" name="user[email]" id="user_email">
  </h3>

  <h3>
    <label for="user_password">Password</label>
  </h3>
  <h3 class="black field">
    <input placeholder="รหัสผ่าน" type="password" name="user[password]" id="user_password">
  </h3>

  <h3>
    <label for="user_password_confirmation">Password Confirmation</label>
  </h3>
  <h3 class="black field">
    <input placeholder="รหัสผ่าน" type="password" name="user[password_confirmation]" id="user_password_confirmation">
  </h3>

  <h3>
    <label for="user_postal_code">Postal Code</label>
  </h3>
  <h3 class="black field">
    <input placeholder="รหัสไปรษณีย์" type="email" name="user[postal_code]" id="user_postal_code">
  </h3>
  <br>
  <input type="submit" name="commit" value="Join BSC Online!" class="btn btn-success">
</form>

