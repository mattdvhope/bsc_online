<span id="time-slot-template">
  {{#if no_time_slots}}
    <h4>(You have not scheduled any time slots yet.)</h4>
  {{^}}
    <span id="test-slot-list">
      <ul>
        {{#each time_slots}}
          <li><span>{{this.day}} {{this.time_period}} {{am_pm}}</span>  <a data-id={{this.id}} id="delete-skype-slot" href="">Delete</a></li>
        {{/each}}
      </ul>
    </span>
  {{/if}}

  <select name="skype-day" id="number-of-slots">
    <option id="option-with-id" value="select_option" selected>Number of slots you'll teach</option>
    {{#each number_of_slots}}
      <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>

</span>