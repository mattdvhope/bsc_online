<div class="container">

  <h2>Here is a list of potential Skype partners for you.</h2>
  <br>
  {{#if no_students}}
    <h3>There are currently no students available.</h3>
  {{^}}
    <ul style="list-style-type:none">
      <hr>
    {{#each students}}
      <li>
        <h3 style="cursor: pointer; text-decoration: underline;" class="modal-initiator student-profile-modal" data-toggle="modal" data-target="#studentprofile" data-first-name={{this.first_name}} data-last-name={{this.last_name}} data-gender={{this.gender}} data-age={{this.age}}>
          {{this.first_name}} {{this.last_name}}
        </h3>
        <h4>Gender: {{this.gender}}</h4>
        <h4>Age: {{this.age}}</h4>
        <h4>State: {{this.province}}</h4>
        <h4>Country: {{this.country}}</h4>
        <hr>
      </li>
    {{/each}} <!-- each class times -->
    </ul>
  {{/if}}

  <hr>
  <h2><a href="/log_out">Log Out</a></h2>
  <hr>

</div> <!-- container -->


