<div class="container">

  <h2>Here is a list of CEP class times and the students who have registered for them.</h2>
  <br>
  {{#if no_class_times}}
    <h3>No class times scheduled at this time</h3>
  {{^}}
    <ul style="list-style-type:none">
      <hr>
    {{#each class_times}}
      <li >
        <h3 style="text-decoration: underline;">{{this.period}}</h3>
        {{#if this.users}}
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Nick Name</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Province/District</th>
                    <th>Payment Option</th>
                    <th>Date Registered</th>
                  </tr>
                </thead>

                <tbody>
                {{#each this.users}}
                  <tr>
                    <td>{{this.nickname}}</td>
                    <td>{{this.first_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td>{{this.gender}}</td>
                    <td>{{this.phone_number}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.district}}</td>
                    <td>{{this.payment_option}}</td>
                    <td>{{this.when_registered}}</td>
                  </tr>
                {{/each}}
                </tbody>
              </table>
            </div> <!-- table-responsive -->
        {{^}}
          <h4>No students have registered for this class yet.</h4>
        {{/if}}
        <hr>
      </li>
    {{/each}} <!-- each class times -->
    </ul>
  {{/if}} <!-- if no class times -->

  <hr>
  <h2><a href="/log_out">Log Out</a></h2>
  <hr>

</div> <!-- container -->


