<div class="container">

  {{#if no_volunteers}}
    <h3>There are currently no volunteers available.</h3>
  {{^}}
    <ul  style="list-style-type:none">
      <hr>
    {{#each volunteers}}
      <li>
        <h3 style="cursor: pointer; text-decoration: underline;" class="modal-initiator volunteer-profile-modal" data-toggle="modal" data-target="#volunteerprofile" data-id={{this.id}} data-first-name={{this.first_name}} data-last-name={{this.last_name}} data-gender={{this.gender}} data-age={{this.age}} data-slots='{{this.stringified_slots}}'>
          {{this.first_name}} {{this.last_name}}
        </h3>
        <h4>
          {{#genderTranslate this.gender }}
          {{/genderTranslate}}
        </h4>
        <h4>Age: {{this.age}}</h4>
        <h4>State: {{this.province}}</h4>
        <h4>Country: {{this.country}}</h4>
        <h4 id="choose-skype-time">Choose skype times with {{this.first_name}}:</h4>
        {{#each this.skype_time_slots}}
          <div>
          {{#if this.available}}
            <input class="checkers" data-id={{this.id}} data-volunteer-id={{this.volunteer_id}} type="checkbox">
            <span id="skype-time-slot-available" data-order={{this.ordertime}}>{{this.day}} {{this.time_period}} {{this.am_pm}}</span>
          {{else}}
            {{> skype_time_slot_input }}
            <span id="skype-time-slot-available" style="color: #8BC34A;">{{this.day}} {{this.time_period}} {{this.am_pm}} กับคุณ, {{../../../first_name}}</span>
          {{/if}}
          </div>
        {{/each}}
        <h4>After you choose some slots from {{this.first_name}}, please click on this green button.  An auto-email will be sent to inform {{this.first_name}} that you want to be a Skype partner, {{../first_name}}.</h4>
        <button id="connect-with-volunteer" class="btn btn-success" data-id={{this.id}} data-firstname={{this.first_name}} data-lastname={{this.last_name}}>
          Auto-email to {{this.first_name}}
        </button>


        <hr>
      </li>
    {{/each}} <!-- each class times -->
    </ul>
  {{/if}}

  <hr>
  <h2><a href="/log_out">ออกจากระบบ</a></h2>
  <hr>

</div> <!-- container -->


