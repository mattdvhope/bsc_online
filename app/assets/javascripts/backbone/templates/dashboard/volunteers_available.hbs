<div class="container">

  {{#if no_vol_with_slots}}
    <h3>There are currently no volunteers available.</h3>
  {{^}}
    <ul  style="list-style-type:none">
      <hr>
    {{#each volunteers}}
      <li>
        <h3>
          ชื่อ: <span style="text-decoration: underline;">{{this.first_name}} {{this.last_name}}</span>
        </h3>
        <h4>
          {{#genderTranslate this.gender }}
          {{/genderTranslate}}
        </h4>
        <h4>อายุ: {{this.age}}</h4>
        <h4>รัฐ: {{this.province}}</h4>
        <h4>ประเทศ: {{this.country}}</h4>
        <h4 id="choose-skype-time">Choose skype times with {{this.first_name}}.  {{this.first_name}} is available for only 1{{!-- {{this.number_of_slots}} --}} of these {{this.number_of_slots_listed}} slots:</h4>

        {{#disableSomeSlots this.skype_time_slots}}
          <div id="checkArray">
          {{#if this.available}}
            <input class="checkers" data-id={{this.id}} data-volunteer-id={{this.volunteer_id}} type="checkbox">
            <span id="skype-time-slot-available" data-order={{this.ordertime}}>{{this.day_thai}} {{this.time_thai}}</span>
          {{else}}
            {{> skype_time_slot_input }}
            <span id="skype-time-slot-available" style="color: #8BC34A;">{{this.day_thai}} {{this.time_thai}} กับคุณ, {{../../../first_name}}</span>
          {{/if}}
          </div>
        {{/disableSomeSlots}}

        <h4>After you choose some slots from {{this.first_name}}, please click on this green button.  An auto-email will be sent to inform {{this.first_name}} that you want to be a Skype partner, {{../first_name}}.</h4>
        <button id="connect-with-volunteer" class="btn btn-success" data-id={{this.id}} data-firstname={{this.first_name}} data-lastname={{this.last_name}}>
          Auto-email to {{this.first_name}}
        </button>
        <hr>
      </li>
    {{/each}} <!-- each class times -->
    </ul>
  {{/if}}

</div> <!-- container -->


