<div class="modal-dialog">

  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close close-modal" data-dismiss="modal">&times;</button>
      <h1>Profile Modal</h1>
    </div>


    <div class="modal-body">

      <header>
        <h1>Profile of <span id="volunteer-first-name"></span>!</h1>
        <h4>
          Here is some information about {{pronoun}}.
        </h4>
        <hr>
      </header>

      <h3> <!-- The data for these spans comes from 'click .volunteer-profile-modal' in volunteers_available.js-->
        <span id="volunteer-first-name"></span> <span id="volunteer-last-name"></span> is a <span id="volunteer-age"></span>-year-old <span id="volunteer-gender"></span> who is available as a Skype-partner for you, {{student.first_name}}.
      </h3>
      
      <hr>

      <br>


      <a class="btn btn-success" href="/student_connect_with_volunteer/{{student.id}}/{{volunteer.id}}">
        Get in touch with {{first_name}}
      </a>

      <button type="button" class="btn btn-warning close-modal" data-dismiss="modal">Not choose {{first_name}} yet</button>

    </div> <!-- modal-body -->


    <div class="modal-footer">
      <button type="button" class="btn btn-default close-modal" data-dismiss="modal">Close</button>
    </div>
  </div> <!-- Modal content-->
</div> <!-- Modal dialog -->




