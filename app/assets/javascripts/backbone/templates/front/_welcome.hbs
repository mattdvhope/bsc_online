<div class="container-full main" id="page-top">
  <div class="row">
    <div class="top-front-screen">
      {{#if window_big}}
        <img src="https://s3-ap-southeast-1.amazonaws.com/ccmcoversbsc/City+scene.jpg" class="img-responsive">
      {{^}}
        <img src="https://s3-ap-southeast-1.amazonaws.com/ccmcoversbsc/City+mobile.png" alt="narrow picture" class="img-responsive">
      {{/if}}
      <div class="top-front-caption">
        <div class="text-box">
          {{#if thai_language}}
              {{> front/thai/_top_welcome }}
            {{^}}
              {{> front/english/_top_welcome }}
          {{/if}}
        </div>
      </div>
    </div>
  </div> {{!-- row --}}
</div>

<div class="container-full main" id="welcome-caption-id">
  <div class="row">
    <div class="welcome-screen">
      {{#if window_big}}
        <img src="https://s3-ap-southeast-1.amazonaws.com/ccmcoversbsc/Welcome+wide.png" alt="wide picture" class="img-responsive">
      {{^}}
        <img src="https://s3-ap-southeast-1.amazonaws.com/ccmcoversbsc/Welcome+mobile.png" alt="narrow picture" class="img-responsive">
      {{/if}}
      <div class="welcome-caption-content">
        {{#if thai_language}}
          <span>
          {{> front/thai/_welcome_caption }}
          </span>
        {{^}}
          {{> front/english/_welcome_caption }}
        {{/if}}
      </div>
    </div>
  </div> {{!-- row --}}
</div>












