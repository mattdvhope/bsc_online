            </a>
          </div>
          <div class="sign-up">
            <a class="modal-initiator non-summer-university"  href="#" data-toggle="modal" data-target="#applicationmodal">{{sign_up}}</a>
          </div>
        {{/unless }} <!-- unless.. dashboard_visible -->

      </div> {{!-- .navbar-header --}}


      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <ul class="nav navbar-nav navbar-right">
          {{#unless dashboard_visible}}
            {{#if volunteer_info_visible}}
              <li><a id="volunteer-steps-point" class="page-scroll nav-hover">{{steps_to_volunteer}}</a></li>
            {{^}}
              <li><a id="schedule-point" class="modal-initiator nav-hover"  href="#" data-toggle="modal" data-target="#generalschedulemodal">
