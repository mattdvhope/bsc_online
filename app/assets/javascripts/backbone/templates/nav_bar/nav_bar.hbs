              </a></li>


              <li role="separator" class="divider"></li>

              <li><a id="be-a-member-point" class="page-scroll nav-hover">{{be_a_member}}</a></li>
              
              <li class="dropdown">
                <a href="" id="nav-dropdown" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{courses}}<span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li id="backbone-app">
                    <a id="drop-down-link" class="modal-initiator"  href="#" data-toggle="modal" data-target="#loginmodal">
                      {{login}}
                    </a>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li id="backbone-app">
                    <a id="drop-down-link" class="modal-initiator non-summer-university"  href="#" data-toggle="modal" data-target="#applicationmodal">
                      {{you_can_speak}}
                    </a>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li id="backbone-app">
                    <a id="drop-down-link" class="modal-initiator"  href="#" data-toggle="modal" data-target="#converseonlinemodal">
                      {{converse_online}}
                    </a>
                  </li>
                </ul>
              </li>

              <li role="separator" class="divider"></li>

            {{/if}} <!-- else from 'if volunteer_info_visible' -->

            <li role="separator" class="divider"></li>

            <li><a id="contact-us-point" class="page-scroll nav-hover">{{contact_us}}</a></li>

            <li class="dropdown">
              <a href="" id="nav-dropdown" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{volunteer}}<span class="caret"></span></a>
              <ul class="dropdown-menu">
                {{#unless volunteer_info_visible}}
                  <li id="backbone-app" class="volunteer_page">
                    <a id="drop-down-link" href="/volunteer_info">{{volunteer_info}}</a>
                  </li>
                  <li role="separator" class="divider"></li>
                {{/unless }} <!-- unless.. volunteer_info_visible -->
                <li id="backbone-app">
                  <a id="drop-down-link" class="modal-initiator"  href="#" data-toggle="modal" data-target="#registervolunteermodal">
                    {{register_new_volunteer}}
                  </a>
                </li>
                <li role="separator" class="divider"></li>
                <li id="backbone-app">
                  <a id="drop-down-link" class="modal-initiator"  href="#" data-toggle="modal" data-target="#loginmodal">
                    {{login}}
                  </a>
                </li>
                
              </ul>
            </li>
            <li>
            <li class="national-flag">
              <span class="usa_flag">
                <img style="cursor: pointer; padding-top: 0.5em;" src="https://s3-ap-southeast-1.amazonaws.com/ccmcoversbsc/usa_flag_circle.png" alt="Usa">
              </span>
            </li>
            <li role="separator" class="divider"></li>
            <li class="national-flag">
              <span class="thai_flag">
                <img style="cursor: pointer; padding-top: 0.5em;" src="https://s3-ap-southeast-1.amazonaws.com/ccmcoversbsc/thailand_flag_circle.png" alt="Thai">
              </span>
            </li>

